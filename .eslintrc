{
  env: {
    'node': true,
     'es6': true
     },
  rules: {
         'no-cond-assign': 0, // eslint:recommended
         'no-debugger': 2, // eslint:recommended
         'no-dupe-args': 2, // eslint:recommended
         'no-dupe-keys': 2, // eslint:recommended
         'no-duplicate-case': 2, // eslint:recommended
         'no-irregular-whitespace': 2, // eslint:recommended
         'no-sparse-arrays': 2,
         'no-unexpected-multiline': 2, // eslint:recommended
         'no-unreachable': 2, // eslint:recommended
         'curly': [2, 'multi-line'],
         'no-invalid-this': 2,
         'no-multi-spaces': 2,
         'no-new-wrappers': 2,
         'no-throw-literal': 2, // eslint:recommended
         'no-with': 2,

         
         // Strict Mode
         'no-undef': 1, // eslint:recommended
         'no-unused-vars': [1, {args: 'none'}], // eslint:recommended
         
         'array-bracket-spacing': [2, 'never'],
         'brace-style': 2,
         'camelcase': [2, {properties: 'never'}],
         'comma-spacing': 2,
         'comma-style': 2,
         'computed-property-spacing': 2,
         'func-call-spacing': 2,
         'linebreak-style': 2,
         'no-array-constructor': 2,
         'no-mixed-spaces-and-tabs': 2, // eslint:recommended
         'no-multiple-empty-lines': [2, {max: 2}],
         'no-trailing-spaces': 2,
         'object-curly-spacing': ['error', 'always'],
         'one-var': [2, { var: 'never',
                          let: 'never',
                          const: 'never',
                         }],
         'padded-blocks': [2, { 'classes': 'always', 'blocks': 'never', 'switches': 'never'}],
         'quote-props': [2, 'consistent'],
         'quotes': [2, 'single', {allowTemplateLiterals: true}],
         'semi-spacing': 2,
         'semi': 2,
         'space-before-blocks': 2,
         'space-before-function-paren': [2, 'never'],
         'spaced-comment': [2, 'always'],
         'func-style': [2, 'declaration', { 'allowArrowFunctions': true }],
         'indent': [2,2],
         'max-len': [2,150],
       }
}
